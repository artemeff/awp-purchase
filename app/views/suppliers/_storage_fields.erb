<fieldset id="storage-meta" class="nested-fields">
  <div class="field">
    <%= f.label :title, "Продукт", class: "control-label" %>
    <div class="controls"><%= f.select :product_id, Product.all.collect {|x| [x.name, x.id]}, {}, multiple: false %></div>
  </div>
  <div class="field">
    <%= f.label :title, "Количество", class: "control-label" %>
    <div class="controls"><%= f.text_field :quantity %></div>
  </div>
  <div class="field">
    <%= f.label :title, "Цена за штуку", class: "control-label" %>
    <div class="controls"><%= f.text_field :price %></div>
  <div class="field">
    <%= link_to_remove_association "удалить", f %>
  </div>
  <hr>
</fieldset>
